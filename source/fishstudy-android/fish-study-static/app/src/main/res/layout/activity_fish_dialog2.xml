<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image_fish_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seahorse_info"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:fontFamily="@font/linottebold"
        />

    <TextView
        android:id="@+id/txt_fish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÁ NGỰA"
        app:layout_constraintTop_toBottomOf="@+id/image_fish_info"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:fontFamily="@font/linottebold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/txt_fish_info_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên tiếng anh là: SEA HORSE."
        app:layout_constraintTop_toBottomOf="@+id/txt_fish_name"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:textColor="@android:color/black"
        android:fontFamily="@font/linottebold"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_fish_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Độ tuổi trung bình của chúng là từ 1 đến 2 tuổi."
        app:layout_constraintTop_toBottomOf="@+id/txt_fish_info_english"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:fontFamily="@font/linottebold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_fish_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Cá ngựa đẻ trứng, con cái sẽ truyền trứng cho con đực, và con đực sẽ mang số trứng đó cho đến khi trứng nở nhé.)"
        app:layout_constraintTop_toBottomOf="@+id/txt_fish_age"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:fontFamily="@font/linottebold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/dialogButtonOK"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:src="@drawable/keepgoing"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_fish_note"
        android:layout_marginTop="20dp"
        />


</android.support.constraint.ConstraintLayout>