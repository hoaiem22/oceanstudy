            android:id="@+id/bubble3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble3"
            />
        <ImageView
            android:id="@+id/bubble4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bubble3"
            />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/fish_home_1"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/ray_home"/>

        <ImageView
            android:id="@+id/fish_home_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cartoon2"/>

        <ImageView
            android:id="@+id/fish_home_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cartoon2"/>





        <ImageView
            android:id="@+id/btnStart"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:onClick="changeToStart"
            android:src="@drawable/start"
            android:scaleY="1.35"
            />

